<h1>Profile</h1>

<div >
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, :class => 'avatar' %>
  <% end %>
</div>

<h3>Email Address</h3>
<%= @user.email %> 

<h3>Name</h3>
<%= @user.name %>

<h3>Age</h3>
<%= @user.age %>

<h3>Hobbies</h3>
<%= @user.hobby %>

<h3>Local</h3>
<%= @user.local %>
